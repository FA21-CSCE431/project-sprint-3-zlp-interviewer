<p id="notice"><%= notice %></p>

<h1>Welcome To ZLP Interview Scheduler!</h1>
<h1>Schedule your interview below.</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Interviewer</th>
      <th>Room</th>
      <th>Phone Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.time %></td>
        <td><%= book.interviewer %></td>
        <td><%= book.room%></td>
        <td><%= book.phoneNumber%></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interview', new_book_path %>
